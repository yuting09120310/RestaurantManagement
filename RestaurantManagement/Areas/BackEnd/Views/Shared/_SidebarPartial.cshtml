@using System.Data;
@using RestaurantManagement.Models;
@{
    Layout = null;
    IEnumerable<MenuGroup> modules = ViewBag.module as IEnumerable<MenuGroup>;
    IEnumerable<MenuSub> moduleFunctions = ViewBag.moduleFun as IEnumerable<MenuSub>;
}


<nav id="sidebar" aria-label="Main Navigation">
    <!-- Side Header -->
    <div class="content-header">
        <!-- Logo -->
        <a class="fw-semibold text-dual" asp-action="Index" asp-controller="Home">
            <span class="smini-visible">
                <i class="fa fa-circle-notch text-primary"></i>
            </span>
            <span class="smini-hide fs-5 tracking-wider">書商管理系統</span>
        </a>
        <!-- END Logo -->
        <!-- Extra -->
        <div>
            <!-- Dark Mode -->
            <!-- Layout API, functionality initialized in Template._uiApiLayout() -->
            <button type="button" class="btn btn-sm btn-alt-secondary" data-toggle="layout" data-action="dark_mode_toggle">
                <i class="far fa-moon"></i>
            </button>
            <!-- END Dark Mode -->
            <!-- Close Sidebar, Visible only on mobile screens -->
            <!-- Layout API, functionality initialized in Template._uiApiLayout() -->
            <a class="d-lg-none btn btn-sm btn-alt-secondary ms-1" data-toggle="layout" data-action="sidebar_close" href="javascript:void(0)">
                <i class="fa fa-fw fa-times"></i>
            </a>
            <!-- END Close Sidebar -->
        </div>
        <!-- END Extra -->
    </div>
    <!-- END Side Header -->

    <!-- Sidebar Scrolling -->
    <div class="js-sidebar-scroll">
        <!-- Side Navigation -->
        <div class="content-side">
            <ul class="nav-main">
                <li class="nav-main-heading">選單列表</li>

                @{
                    foreach (MenuGroup menuGroup in modules)
                    {
                        <li class="nav-main-item">

                            <a class="nav-main-link nav-main-link-submenu" data-toggle="submenu" aria-haspopup="true" aria-expanded="false" href="#">
                                <i class="fa @menuGroup.MenuGroupIcon"> &nbsp;</i>
                                <span class="nav-main-link-name">@menuGroup.MenuGroupName</span>
                            </a>
                            
                            @foreach (MenuSub menuSub in moduleFunctions)
                            {
                                if (menuSub.MenuGroupId == menuGroup.MenuGroupId.ToString())
                                {
                                    <ul class="nav-main-submenu">
                                        <li class="nav-main-item">
                                            <a class="nav-main-link" href="@menuSub.MenuSubUrl">
                                                <span class="nav-main-link-name">@menuSub.MenuSubName</span>
                                            </a>
                                        </li>
                                    </ul>
                                }
                            }

                        </li>
                    }
                }

            </ul>
        </div>
        <!-- END Side Navigation -->
    </div>
    <!-- END Sidebar Scrolling -->

</nav>
<!-- END Sidebar -->
